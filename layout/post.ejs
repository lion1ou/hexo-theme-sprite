<div class="post-container">
  <article class="post" id="post">
    <header class="post-header text-center">
      <h1 class="title">
        <%=page.title%>
      </h1>

      <% if (theme.postInfo.showDate && page.date) { %>
      <time class="time" datetime="<%=date_xml(page.date)%>">
        <%=date(page.date)%>
      </time>
      <% } %>

      <% if (theme.postInfo.wordCount) { %>
        <span class="slash">/</span>
        <span class="read">
          字数 <span class="post-count"><%= wordcount(page.content) %></span>
        </span>
      <% } %>

      <% if (theme.postInfo.min2read) { %>
        <span class="slash">/</span>
        <span class="read">
          <span class="post-count"><%= min2read(page.content) %> min</span> 读完
        </span>
      <% } %>

      <% if (theme.postInfo.readCount) { %>
        <span class="slash">/</span>
        <span class="read">
          阅读 <span id="busuanzi_value_page_pv"></span>
        </span>
      <% } %>
      
      <% if (theme.postInfo.showTags && page.tags) { %>
        <span class="post-meta">
          <span class="post-tags">
            <%- list_tags(page.tags, {
              show_count: false,
              class: 'article-tag'
            }) %>
          </span>
        </span>
      <% } %>

    </header>

    <div class="post-content">
      <%-page.content%>
    </div>

    <div class="post-end-tip">
      <div>全文完。</div>
    </div>
  </article>
  <div class="toc-container">
    <%- partial('partials/toc') %>
  </div>
</div>
<%- partial('partials/copyright') %>
<%- partial('partials/share') %>
<%- partial('partials/prenext') %>
<%- partial('partials/disqus') %>
