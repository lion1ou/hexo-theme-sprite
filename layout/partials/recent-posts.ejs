
<% if (page.posts.length > 0) { %>
  <div class="recent-posts">
    <% page.posts.sort('date', -1).each(function(post) { %>

      <article class="recent-post-item">
        <a class="title" href="<%=config.root + post.path%>"><h2><%=post.title%></h2></a>
        <div class="post-meta">
          <% if (theme.index_post_page.show_date && post.date) { %>
            <time class="time" datetime="<%=post.date.toJSON()%>">
              <%=date(post.date)%>
            </time>
          <% } %>

          
          <% if(theme.index_post_page.word_count && theme.index_post_page.show_date) {%>
            <span class="slash">/</span>
          <% } %>
          <% if (theme.index_post_page.word_count) { %>
            <span class="read">
              字数 <span class="post-count"><%= wordcount(post.content) %></span>
            </span>
          <% } %>
         
          <% if(theme.index_post_page.min2read && theme.index_post_page.word_count) {%>
            <span class="slash">/</span>
          <% } %>
          <% if (theme.index_post_page.min2read) { %>
            <span class="read">
              <span class="post-count"><%= min2read(post.content) %> min</span> 读完
            </span>
          <% } %>

          <% if(theme.index_post_page.word_count && theme.index_post_page.show_tags) {%>
            <span class="slash">/</span>
          <% } %>
          
          <% if (theme.index_post_page.show_tags && post.tags) { %>
            <%- list_tags(post.tags, {
              show_count: false,
              class: 'index-tag'
            }) %>
          <% } %>
        </div>

        <% if (theme.index_post_page.show_excerpt && post.excerpt) { %>
          <div class="post-excerpt">
            <%- post.excerpt %>
          </div>
        <% } %>
        <a class="more" href="<%=config.root + post.path%>"> 阅读全文 > </a>
      </article>
    <% }); %>
  </div>
<% } %>